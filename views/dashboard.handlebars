<!-- GAMES -->
<div class="row-col col-12 d-flex flex-wrap Border">
    <div class="row-col col-12 d-flex flex-wrap justify-content-between">
        <div class="col-6">
            <h1 class="newsHead">Games</h1>
        </div>
        <div class="col-6 mr-3">
            <h1 class="gameHead text-end">{{games.length}} Matches</h1>
        </div>
    </div>
    <div class="row-col col-12 d-flex flex-wrap justify-content-center">
        {{!-- START LOOP HERE --}}
        {{#each games}}
        <!-- ACCORDION -->
        <div class="d-flex flex-wrap col-sm-12 justify-content-center" id="accordion{{GameID}}" data-gameID="{{GameID}}">
            <!-- START OF SINGLE GAME INFO DIV -->
            <div class="card game-card d-flex flex-wrap col-sm-12 justify-content-center">
                <div class="d-flex flex-wrap row row-col-sm-12 justify-content-start card-header" id="headingOne">
                    <div class="col-md-12 col-sm-12 col-lg-6 d-flex flex-wrap justify-content-start text-start">
                        <div class="col-sm-12 teams">{{HomeTeam}} VS {{AwayTeam}}</div>
                    </div>

                    <div class=" col-md-12 col-sm-12 col-lg-3 d-flex flex-wrap justify-content-start text-align-start">
                        <div class="col-sm-12 time">{{DateTime}}</div>
                    </div>

                    <div class="d-flex col-sm-12 col-md-12 col-lg-3 flex-wrap justify-content-start">
                        <h5 class="mb-0 d-flex flex-wrap col-sm-12 text-align-start">
                            <button class=" d-flex flex-wrap col-sm-12 justify-content-end border-none game-btn-ctnr"
                                data-toggle="collapse" data-target="#collapse{{GameID}}" aria-expanded="true"
                                aria-controls="collapseOne">
                                <span class="game-actBet-btn">Active Bets</span>
                            </button>
                        </h5>
                    </div>

                </div>

                <div id="collapse{{GameID}}" class="collapse " aria-labelledby="headingOne" data-parent="#accordion{{GameID}}">
                    <div class="card-body game-card-body d-flex flex-wrap">
                        <table class="table table-striped table-dark">
                            <thead>
                                <tr>

                                    <th scope="col">CHALLENGER</th>
                                    <th scope="col">WAGER</th>
                                    <th scope="col">PICK</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <th scope="row">USER_NAME</th>
                                    <td>$100</td>
                                    <td>TEAM 2</td>
                                    <td><a href="#" class="btn btn-primary news-btn">ACCEPT</a>
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">USER_NAME</th>
                                    <td>$50</td>
                                    <td>TEAM 1</td>
                                    <td><a href="#" class="btn btn-primary news-btn">ACCEPT</a>
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">USER_NAME</th>
                                    <td>$10</td>
                                    <td>TEAM 2</td>
                                    <td><a href="#" class="btn btn-primary news-btn">ACCEPT</a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- END OF SINGLE GAME INFO DIV -->
        </div>
        <!-- END ACCORDION -->
        {{/each}}
        {{!-- END LOOP HERE --}}
    </div>
    <!-- END DIV CONTAINING ACCORDION -->
</div>
<!-- END GAMES -->