<!-- NEWS -->
<div class="row-col col-12 d-flex flex-wrap Border">
    <div class="row-col col-12 d-flex flex-wrap justify-content-start">
        <div class="col-12">
            <h1 class="newsHead">NEWS</h1>
        </div>

    </div>
    <!-- SINGLE ITEM CLASS WORKS SLIDER, RUNS EACH DIV IN SUCCESSION  -->
    <div class="row-col col-12 d-flex flex-wrap justify-content-center single-item">
        <!-- CARDS -->
        {{!-- START LOOP HERE --}}
        {{#each news}}
        <div class="col-12 d-flex flex-wrap justify-content-center">
            <div class="card shadow-effect col-lg-8">
                <div class="imgBackground col-lg-3 col-md-3 col-sm-3 col-xl-3">
                    <img class="card-img-top" src="{{render_team_logo TeamID}}" alt="{{render_team_name TeamID}}">
                </div>
                <div class="col-12 mt-3 text-left">Published {{TimeAgo}}</div>
                <div class="card-body">
                    <h5 class="card-title newsTitle">{{Title}}</h5>
                    <blockquote class="blockquote">
                        <p class="card-text">{{Content}}</p>
                    </blockquote>

                    <a href="{{Url}}" target="_blank" rel="noopener" class="btn btn-primary news-btn">View Full
                        Story</a>
                </div>
            </div>
        </div>
        {{/each}}
        {{!-- END LOOP HERE --}}
    </div>
</div>


<!-- GAMES -->
<!-- THIS BEGINS DYNAMIC CONTENT -->
<div class="row-col col-sm-12 d-flex flex-wrap justify-content-center Border">
    <div class="row-col col-12 d-flex flex-wrap justify-content-evenly">
        <div class="col-6">
            <h1 class="newsHead">Games</h1>
        </div>
        <!--  -->
        <!-- HANDLEBARS HERE FOR MATCH QUANTITY -->
        <!--  -->
        <div class="col-6">
            <h1 class="gameHead text-end">{{games.length}} Matches</h1>
        </div>
    </div>
    <!-- START DIV THAT HOLD THE GAME CARDS, MAIN CONTAINER FOR SLIDER SINGLE_ITEM CLASS CONTROLS SLIDER-->
    <div class="row-col col-12 d-flex flex-wrap justify-content-center single-item1">
        <!-- THE EACH LOOP SHOULD START HERE FOR MULTIPLE CARDS -->
        {{#each games}}
        <!-- CARDS -->
        <div class="col-sm-10 d-flex flex-wrap justify-content-center">
            <div class="card shadow-effect d-flex flex-wrap justify-content-center col-sm-8 ">
                <div class=" d-flex flex-wrap justify-content-start game-team-border col-sm-12">
                    <!--  -->
                    <!-- HANDLEBARS HERE FOR TEAM LOGOS -->
                    <!--  -->
                    <div class="imgBackground-dash d-flex flex-wrap col-6 pic-1"><img
                            src="{{render_team_logo HomeTeamID}}" alt="{{render_team_name HomeTeamID}}'s logo">
                    </div>
                    <!--  -->
                    <!-- HANDLEBARS HERE FOR TEAM LOGOS -->
                    <!--  -->
                    <div class="imgBackground-dash col-6 d-flex flex-wrap pic-2"><img
                            src="{{render_team_logo AwayTeamID}}" alt="{{render_team_name AwayTeamID}}'s logo">
                    </div>
                </div>
                <div class="card-body col-12 d-flex flex-wrap justify-content-center">

                    <div class="col-6 d-flex flex-wrap justify-content-center text-center mb-3">
                        <!--  -->
                        <!-- HANDLEBARS HERE FOR TEAM 1 NAME -->
                        <!--  -->
                        <div class="col-sm-12 teams">{{render_team_name HomeTeamID}} </div>
                    </div>

                    <div class=" col-6 d-flex flex-wrap justify-content-center text-center mb-3">
                        <!--  -->
                        <!-- HANDLEBARS HERE FOR TEAM 2 NAME -->
                        <!--  -->
                        <div class="col-sm-12 time">{{render_team_name AwayTeamID}}</div>
                    </div>
                    <div class=" col-12 d-flex flex-wrap justify-content-center text-center mb-4">
                        <!--  -->
                        <!-- HANDLEBARS HERE FOR GAME TIME -->
                        <!--  -->
                        <div class="col-sm-12 time">{{format_date DateTime}} @ {{format_time DateTime}}</div>
                    </div>


                    {{!-- TESTING ADDING ANOTHER ACCORDION FOR BETS --}}
                    <div class="d-flex col-12 justify-content-center table-text-mobile" id="accordion-{{@index}}">
                        <!-- START OF SINGLE GAME INFO DIV -->

                        <div class="card game-card d-flex flex-wrap col-10 justify-content-center game-btn-ctnr">
                            <!-- NEED TO CHANGE THE IDS DYNAMICALLY FOR ACCORDION -->
                            <!--                                        THE ID HERE MUST MATCH BELOW -->
                            <div class="d-flex flex-wrap col-sm-12 justify-content-end card-header"
