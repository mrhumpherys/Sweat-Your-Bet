<!-- GAMES -->
<div class="row-col col-sm-12 d-flex flex-wrap justify-content-center Border">
    <div class="row-col col-12 d-flex flex-wrap justify-content-between">
        <div class="col-6">
            <h1 class="newsHead">Games</h1>
        </div>
        <div class="col-6 mr-3">
            <h1 class="gameHead text-end">{{games.length}} Matches</h1>
        </div>
    </div>
    <div class="row-col col-sm-12 d-flex flex-wrap justify-content-center">
        {{!-- START LOOP HERE --}}
        {{#each games}}
        <!-- ACCORDION -->
        <div class="d-flex flex-wrap col-sm-12 justify-content-center" id="accordion{{GameID}}">
            <!-- START OF SINGLE GAME INFO DIV -->
            <div class="card game-card d-flex flex-wrap col-sm-12 justify-content-center">
                <div class="d-flex flex-wrap row row-col-sm-12 justify-content-start card-header" id="headingOne">
                    <div class="col-md-12 col-sm-12 col-lg-6 d-flex flex-wrap justify-content-start text-start">
                        <div class="col-sm-12 teams">{{render_team_name HomeTeamID}} VS {{render_team_name AwayTeamID}}
                        </div>
                    </div>

                    <div class=" col-md-12 col-sm-12 col-lg-3 d-flex flex-wrap justify-content-start text-align-start">
                        <div class="col-sm-12 time">{{format_date DateTime}} @ {{format_time DateTime}}</div>
                    </div>

                    {{!-- TESTING ADDING ANOTHER ACCORDION FOR BETS --}}
                    <div class="d-flex col-12 justify-content-center table-text-mobile" id="accordion-{{@index}}">
                        <!-- START OF SINGLE GAME INFO DIV -->

                        <div class="card game-card d-flex flex-wrap col-10 justify-content-center game-btn-ctnr">
                            <!-- NEED TO CHANGE THE IDS DYNAMICALLY FOR ACCORDION -->
                            <!--                                        THE ID HERE MUST MATCH BELOW -->
                            <div class="d-flex flex-wrap col-sm-12 justify-content-end card-header"
                                id="heading-{{@index}}">
                                <div class="d-flex col-sm-12 col-md-12 col-lg-3 flex-wrap justify-content-center">
                                    <h5 class="mb-0 d-flex flex-wrap justify-content-center col-sm-12 text-align-start">
                                        <!-- NEED TO CHANGE THE COLLAPSE IDS DYNAMICALLY FOR ACCORDION -->
                                        <!--                                        THE ID HERE MUST MATCH BELOW -->
                                        <button
                                            class=" d-flex flex-wrap col-sm-12 justify-content-center border-none game-btn-ctnr pulse"
                                            data-toggle="collapse" data-target="#collapse-{{@index}}"
                                            aria-expanded="true" aria-controls="collapse-{{@index}}">
                                            <div class="col-12 d-flex justify-content-center">
                                                <a class="btn btn-primary news-btn game-actBet-btn"
                                                    data-gameID="{{GameID}}">Place
                                                    Wager</a>
                                            </div>

                                        </button>
                                    </h5>
                                </div>

                            </div>
                            <!-- THE ID AND ARIA LABELS MUST MATCH THE ID FOR THE CARD -->
                            <!-- NEED TO CHANGE THE COLLAPSE IDS DYNAMICALLY FOR ACCORDION -->
                            <!--                                        THE ID HERE MUST MATCH ABOVE -->
                            <div class="d-flex justify-content-center col-12 mobile">
                                <div id="collapse-{{@index}}" class="collapse" aria-labelledby="heading-{{@index}}"
                                    data-parent="#accordion-{{@index}}">
                                    <div
                                        class="card-body d-flex flex-wrap game-card-body justify-content-center col-12">
                                        <div class="row-col d-flex flex-wrap justify-content-center col-sm-12 Border">
                                            <div class="row-col col-12 d-flex flex-wrap ">
                                                <div class="row-col col-12 d-flex flex-wrap justify-content-center">
                                                    <div class="col-12 d-flex flex-wrap ">
                                                        <h1 class="newsHead">
                                                            Live Bets
                                                        </h1>
                                                    </div>
                                                </div>
                                                <div class="row-col col-12 d-flex flex-wrap justify-content-center">
                                                    <!-- CARDS -->
                                                    <div
                                                        class="card shadow-effect  d-flex flex-wrap col-sm-10 justify-content-center mobile">

                                                        <div
                                                            class="card-body col-12 d-flex flex-wrap justify-content-center mobile">
                                                            <form
                                                                class="row gy-2 gx-3 d-flex flex-wrap justify-content-start">
                                                                <div class="col-auto">
                                                                    <label for="bet">I bet</label>
                                                                    <select type="form-select"
                                                                        class="form-control bg-dark border-success text-white"
                                                                        id="winner">

                                                                        <option selected>{{render_team_name HomeTeamID}}
                                                                        </option>
                                                                        <option value="Team 2">{{render_team_name
                                                                            AwayTeamID}}</option>

                                                                    </select>
                                                                </div>
                                                                <div class="col-auto">
                                                                    <label for="beats">Beats</label>
                                                                    <select type="form-select"
                                                                        class="form-control bg-dark border-success text-white"
                                                                        id="loser">
                                                                        <option selected>{{render_team_name
                                                                            AwayTeamID}}</option>
                                                                        <option value="Team 1">{{render_team_name
                                                                            HomeTeamID}}</option>
                                                                    </select>
                                                                </div>

                                                                <div class="col-auto">
                                                                    <label for="wager">Wager</label>
                                                                    <input type="number"
                                                                        class="form-control bg-dark border-success text-white"
                                                                        id="wager" placeholder="5.00">
                                                                </div>

                                                                <div class="col-12">
                                                                    <button id="place-bet-btn" type="button"
                                                                        class="btn btn-danger tooltip-test mobile"
                                                                        title="Once bets are placed they cannot be withdrawn!">Place
                                                                        Bet</button>
                                                                </div>
                                                            </form>

                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- END ACCORDION -->
                    {{!-- END TESTING --}}

                    <div class="d-flex col-sm-12 col-md-12 col-lg-3 flex-wrap justify-content-start">
                        <h5 class="mb-0 d-flex flex-wrap col-sm-12 text-align-start">
                            <button class=" d-flex flex-wrap col-sm-12 justify-content-end border-none game-btn-ctnr"
                                data-toggle="collapse" data-target="#collapse{{GameID}}" aria-expanded="true"
                                aria-controls="collapseOne">
                                <span class="game-actBet-btn">Active Bets</span>
                            </button>
                        </h5>
                    </div>

                </div>
                <div class="d-flex justify-content-center col-12 mobile">
                    <div id="collapse{{GameID}}" class="collapse" aria-labelledby="headingOne"
                        data-parent="#accordion{{GameID}}">
                        <div class="card-body game-card-body d-flex flex-wrap justify-content-center col-12">
                            <table class="table table-striped table-dark">
                                <thead>
                                    <tr>

                                        <th scope="col">CHALLENGER</th>
                                        <th scope="col">WAGER</th>
                                        <th scope="col">PICK</th>
                                        <th scope="col"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <th scope="row">USER_NAME</th>
                                        <td>$100</td>
                                        <td>TEAM 2</td>
                                        <td><a href="#" class="btn btn-primary news-btn">ACCEPT</a>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th scope="row">USER_NAME</th>
                                        <td>$50</td>
                                        <td>TEAM 1</td>
                                        <td><a href="#" class="btn btn-primary news-btn">ACCEPT</a>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th scope="row">USER_NAME</th>
                                        <td>$10</td>
                                        <td>TEAM 2</td>
                                        <td><a href="#" class="btn btn-primary news-btn">ACCEPT</a>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
            <!-- END OF SINGLE GAME INFO DIV -->
        </div>
        <!-- END ACCORDION -->
        {{/each}}
        {{!-- END LOOP HERE --}}
    </div>
    <!-- END DIV CONTAINING ACCORDION -->
</div>
<!-- END GAMES -->
