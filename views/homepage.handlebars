<!-- NEWS -->
<div class="row-col col-12 d-flex flex-wrap Border">
    <div class="row-col col-12 d-flex flex-wrap justify-content-start">
        <h1 class="newsHead">NEWS</h1>
    </div>
    <!-- SINGLE ITEM CLASS WORKS SLIDER, RUNS EACH DIV IN SUCCESSION  -->
    <div class="row-col col-12 d-flex flex-wrap justify-content-center single-item">
        <!-- CARDS -->
        {{!-- START LOOP HERE --}}
        {{#each news}}
        <div class="col-12 d-flex flex-wrap justify-content-center">
            <div class="card shadow-effect col-lg-8">
                <div class="imgBackground col-lg-3 col-md-3 col-sm-3 col-xl-3">
                    <img class="card-img-top"
                        src="{{render_team_logo TeamID}}"
                        alt="Card image cap">
                </div>
                <div class="card-body">
                    <h5 class="card-title newsTitle">{{Title}}</h5>
                    <blockquote class="blockquote">
                        <p class="card-text">{{Content}}</p>
                    </blockquote>

                    <a href="{{Url}}" class="btn btn-primary news-btn">View Full Story</a>
                </div>
            </div>
        </div>
        {{/each}}
        {{!-- END LOOP HERE --}}
    </div>
</div>


<!-- GAMES -->
<!-- THIS BEGINS DYNAMIC CONTENT -->
<div class="row-col col-sm-12 d-flex flex-wrap justify-content-center Border">
    <div class="row-col col-12 d-flex flex-wrap justify-content-evenly">
        <div class="col-6">
            <h1 class="newsHead">Games</h1>
        </div>
        <!--  -->
        <!-- HANDLEBARS HERE FOR MATCH QUANTITY -->
        <!--  -->
        <div class="col-6">
            <h1 class="gameHead text-end">{{games.length}} Matches</h1>
        </div>
    </div>
    <!-- START DIV THAT HOLD THE GAME CARDS, MAIN CONTAINER FOR SLIDER SINGLE_ITEM CLASS CONTROLS SLIDER-->
    <div class="row-col col-12 d-flex flex-wrap justify-content-center single-item1">
        <!-- THE EACH LOOP SHOULD START HERE FOR MULTIPLE CARDS -->
        {{#each games}}
        <!-- CARDS -->
        <div class="col-sm-12 d-flex flex-wrap justify-content-center">
            <div class="card shadow-effect d-flex flex-wrap justify-content-center col-sm-10 ">
                <div class=" d-flex flex-wrap justify-content-start game-team-border col-12">
                    <!--  -->
                    <!-- HANDLEBARS HERE FOR TEAM LOGOS -->
                    <!--  -->
                    <div class="imgBackground-dash d-flex flex-wrap col-6 pic-1"><img
                            src="{{render_team_logo HomeTeamID}}"
                            alt="Card image cap">
                    </div>
                    <!--  -->
                    <!-- HANDLEBARS HERE FOR TEAM LOGOS -->
                    <!--  -->
                    <div class="imgBackground-dash col-6 d-flex flex-wrap pic-2"><img
                            src="{{render_team_logo AwayTeamID}}"
                            alt="Card image cap">
                    </div>
                </div>
                <div class="card-body col-12 d-flex flex-wrap justify-content-center">

                    <div class="col-6 d-flex flex-wrap justify-content-center text-center mb-3">
                        <!--  -->
                        <!-- HANDLEBARS HERE FOR TEAM 1 NAME -->
                        <!--  -->
                        <div class="col-sm-12 teams">{{HomeTeam}} </div>
                    </div>

                    <div class=" col-6 d-flex flex-wrap justify-content-center text-center mb-3">
                        <!--  -->
                        <!-- HANDLEBARS HERE FOR TEAM 2 NAME -->
                        <!--  -->
                        <div class="col-sm-12 time">{{AwayTeam}}</div>
                    </div>
                    <div class=" col-12 d-flex flex-wrap justify-content-center text-center mb-4">
                        <!--  -->
                        <!-- HANDLEBARS HERE FOR GAME TIME -->
                        <!--  -->
                        <div class="col-sm-12 time">{{format_date DateTime}} @ {{format_time DateTime}}</div>
                    </div>
                    <div class="col-12 d-flex justify-content-center">
                        <a href="#" class="btn btn-primary news-btn pulse">Place Wager</a>
                    </div>
                    <!-- ACCORDION -->
                    <!-- NEED TO CHANGE THE IDS DYNAMICALLY FOR ACCORDION -->
                    <!--                                        THE ID HERE MUST MATCH BELOW -->
                    <div class="d-flex col-12 justify-content-center table-text-mobile" id="accordion-{{GameID}}">
                        <!-- START OF SINGLE GAME INFO DIV -->
                        <div class="card game-card d-flex flex-wrap col-10 justify-content-center game-btn-ctnr">
                            <!-- NEED TO CHANGE THE IDS DYNAMICALLY FOR ACCORDION -->
                            <!--                                        THE ID HERE MUST MATCH BELOW -->
                            <div class="d-flex flex-wrap col-sm-12 justify-content-end card-header" id="heading-{{GameID}}">
                                <div class="d-flex col-sm-12 col-md-12 col-lg-3 flex-wrap justify-content-center">
                                    <h5 class="mb-0 d-flex flex-wrap justify-conent-center col-sm-12 text-align-start">
                                        <!-- NEED TO CHANGE THE COLLAPSE IDS DYNAMICALLY FOR ACCORDION -->
                                        <!--                                        THE ID HERE MUST MATCH BELOW -->
                                        <button
                                            class=" d-flex flex-wrap col-sm-12 justify-content-center border-none game-btn-ctnr"
                                            data-toggle="collapse" data-target="#collapse-{{GameID}}" aria-expanded="true"
                                            aria-controls="collapse-{{GameID}}">
                                            <span class="game-actBet-btn">Active Bets</span>
                                        </button>
                                    </h5>
                                </div>

                            </div>
                            <!-- THE ID AND ARIA LABELS MUST MATCH THE ID FOR THE CARD -->
                            <!-- NEED TO CHANGE THE COLLAPSE IDS DYNAMICALLY FOR ACCORDION -->
                            <!--                                        THE ID HERE MUST MATCH ABOVE -->
                            <div class="d-flex justify-content-center col-12 mobile">
                                <div id="collapse-{{GameID}}" class="collapse" aria-labelledby="heading-{{GameID}}"
                                    data-parent="#accordion-{{GameID}}">
                                    <div
                                        class="card-body d-flex flex-wrap game-card-body justify-content-center col-12">
                                        <table class="table table-striped table-dark ">
                                            <thead>
                                                <tr>

                                                    <th scope="col">CHALLENGER</th>
                                                    <th scope="col">WAGER</th>
                                                    <th scope="col">PICK</th>
                                                    <th scope="col"></th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                    <th scope="row">USER_NAME</th>
                                                    <td>$100</td>
                                                    <td>TEAM 2</td>
                                                    <td><a href="#" class="btn btn-primary news-btn mobile">ACCEPT</a>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <th scope="row">USER_NAME</th>
                                                    <td>$50</td>
                                                    <td>TEAM 1</td>
                                                    <td><a href="#" class="btn btn-primary news-btn mobile">ACCEPT</a>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <th scope="row">USER_NAME</th>
                                                    <td>$10</td>
                                                    <td>TEAM 2</td>
                                                    <td><a href="#" class="btn btn-primary news-btn mobile">ACCEPT</a>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- END ACCORDION -->
                </div>
            </div>
        </div>
        {{/each}}
        <!-- END OF SINGLE GAME INFO DIV -->

    </div>
    <!-- END DIV CONTAINING SLIDER -->
</div>
